<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_base"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/color_restaurant"
                />
            <LinearLayout
                android:id="@+id/layout_detail_scrollRect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:id="@+id/textView_detail_placeName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:text="장소이름"
                    android:textAlignment="center"
                    />
                <TextView
                    android:id="@+id/textView_detail_placeType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_restaurant"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:text="종류" />
                <TextView
                    android:id="@+id/textView_detail_isOpen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewEnd"
                    android:text="영업 중"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="주소"
                        />

                    <TextView
                        android:id="@+id/textView_detail_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:id="@+id/layout_detailShop_telNum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:visibility="gone"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="전화번호"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/textView_detailShop_telNum"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tel"
                            android:textColor="@color/color_link"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layout_detailShop_uri"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:visibility="gone"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="홈페이지"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView_detailShop_url"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="홈페이지 주소"
                            android:textColor="@color/color_link"
                            />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    />
                <Button
                    android:id="@+id/button_detail_map"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/color_smooth"
                    android:text="지도보기" />
                <ImageView
                    android:id="@+id/imageView_detail_thumb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:maxHeight="200dp"
                    android:layout_marginTop="10dp"
                    />
                <LinearLayout
                    android:id="@+id/layout_detailShop_blogRect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    >

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>