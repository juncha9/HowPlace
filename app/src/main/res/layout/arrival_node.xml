<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/color_base"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_subway" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textView_arrivalNode_lineName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="마천행"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/textView_arrivalNode_upDown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="상행"
                    android:textSize="10dp"
                    android:textAlignment="viewEnd"
                    android:layout_weight="2"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textView_arrivalNode_arrivalLeft"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="15분 후"
                    android:layout_weight="2"
                    android:textSize="15dp"
                    />
                <TextView
                    android:id="@+id/textView_arrivalNode_curStation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="영등포구청"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:textAlignment="viewEnd"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
